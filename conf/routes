POST    /operation                                  controllers.MainController.saveOperation
GET     /balance/:account                           controllers.MainController.balance(account: String)
GET     /statement/:account/:dateFrom/:dateTo       controllers.MainController.statement(account: String, dateFrom: String, dateTo: String)
GET     /debt/:account                              controllers.MainController.debtPeriod(account: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

    